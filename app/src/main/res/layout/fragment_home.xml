<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.HomeFragment">

    <!-- TODO: Update blank fragment layout -->
<!--    <TextView-->
<!--        android:layout_width="match_parent"-->
<!--        android:layout_height="match_parent"-->
<!--        android:text="@string/hello_blank_fragment" />-->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.68"
            android:background="@color/primaryColor"
            android:orientation="vertical"
            android:padding="20dp"
            >
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/search_input"
                android:drawableLeft="@drawable/ic_baseline_search_24"
                android:drawableTint="@color/greyColor"
                android:drawablePadding="10dp"
                android:textCursorDrawable="@drawable/cursor_color"
                android:inputType="text"
                android:hint="Search"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.3"
                android:background="@color/primaryColor"
                android:orientation="horizontal"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:layout_marginVertical="10dp"
                >
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="My Groups"
                    android:textColor="@color/white"
                    android:textSize="18sp"
                    android:letterSpacing="0.01"
                    android:alpha="0.8"
                    />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="View all"
                    android:textAlignment="textEnd"
                    android:textColor="@color/white"
                    android:textSize="18sp"
                    android:letterSpacing="0.01"
                    android:drawableRight="@drawable/ic_baseline_chevron_right_24"
                    android:drawableTint="@color/white"
                    android:alpha="0.8"
                    android:gravity="end" />


            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="@color/primaryColor"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginBottom="10dp"
                >

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/card_view"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:paddingBottom="10dp"
                    >
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="0.8"
                        android:layout_gravity="center"
                        android:src="@drawable/ppc_image"
                        android:paddingHorizontal="20dp"
                        android:paddingVertical="10dp"
                        />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="0.3"
                        android:text="Apek IT Support"
                        android:textAlignment="center"
                        android:textColor="@color/black"
                        android:textSize="14sp"
                        android:letterSpacing="0.01"
                        android:alpha="0.8"
                        android:gravity="center_horizontal"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/public_status_bg"
                        android:backgroundTint="@color/blueColor"
                        android:text="Public"
                        android:textAlignment="center"
                        android:textColor="@color/white"
                        android:textSize="13sp"
                        android:letterSpacing="0.02"
                        android:alpha="0.8"
                        android:paddingHorizontal="5dp"
                        android:paddingVertical="2dp"
                        android:gravity="center_horizontal" />


                </LinearLayout>


                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/card_view"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:paddingBottom="10dp"
                    android:layout_marginHorizontal="10dp"
                    >
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="0.8"
                        android:layout_gravity="center"
                        android:src="@drawable/ppc_image"
                        android:paddingHorizontal="20dp"
                        android:paddingVertical="10dp"
                        />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="0.3"
                        android:text="Focus Group"
                        android:textAlignment="center"
                        android:textColor="@color/black"
                        android:textSize="14sp"
                        android:letterSpacing="0.01"
                        android:alpha="0.8"
                        android:gravity="center_horizontal"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/public_status_bg"
                        android:backgroundTint="@color/redColor"
                        android:text="Private"
                        android:textAlignment="center"
                        android:textColor="@color/white"
                        android:textSize="13sp"
                        android:letterSpacing="0.02"
                        android:alpha="0.8"
                        android:paddingHorizontal="5dp"
                        android:paddingVertical="2dp"
                        android:gravity="center_horizontal" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/card_view"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:paddingBottom="10dp"
                    >
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="0.8"
                        android:layout_gravity="center"
                        android:src="@drawable/javat_logo"
                        android:paddingHorizontal="20dp"
                        android:paddingVertical="10dp"
                        />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="0.3"
                        android:text="Hello"
                        android:textAlignment="center"
                        android:textColor="@color/black"
                        android:textSize="14sp"
                        android:letterSpacing="0.01"
                        android:alpha="0.8"
                        android:gravity="center_horizontal"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/public_status_bg"
                        android:backgroundTint="@color/blueColor"
                        android:text="Public"
                        android:textAlignment="center"
                        android:textColor="@color/white"
                        android:textSize="13sp"
                        android:letterSpacing="0.02"
                        android:alpha="0.8"
                        android:paddingHorizontal="5dp"
                        android:paddingVertical="2dp"
                        android:gravity="center_horizontal" />


                </LinearLayout>



            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:background="@color/backgroundColor"
            android:padding="20dp"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.1"
                android:text="My Feed"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:letterSpacing="0.01"
                android:alpha="1"
                />

            <ListView
                android:id="@+id/feed_list_view"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:clipToPadding="false"
                tools:listitem="@layout/custom_feed_list"
                android:divider="@null"
                android:dividerHeight="15dp"
                />

        </LinearLayout>



    </LinearLayout>

</FrameLayout>